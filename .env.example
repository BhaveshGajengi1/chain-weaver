# ============================================
# CHAIN-WEAVER ENVIRONMENT CONFIGURATION
# ============================================
# This is a template file. Copy this to .env.local and fill in your actual values
# Command: cp .env.example .env.local
# NEVER commit .env.local to version control!

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# WalletConnect Project ID (Required for WalletConnect integration)
# Get yours at: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Alchemy API Key (Optional but recommended for better RPC performance)
# Get yours at: https://www.alchemy.com/
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (Alternative to Alchemy)
# Get yours at: https://www.infura.io/
VITE_INFURA_API_KEY=your_infura_api_key_here

# ============================================
# CONTRACT ADDRESSES
# ============================================

# DataLoom Contract Address on Arbitrum Sepolia
# Current deployed address (update if you redeploy)
VITE_DATALOOM_CONTRACT_ADDRESS=0xffAfD3E3673C67e381D9Ea74E05A258701a91226

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Default Chain ID (421614 = Arbitrum Sepolia)
VITE_DEFAULT_CHAIN_ID=421614

# Enable testnet mode
VITE_TESTNET_MODE=true

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Name
VITE_APP_NAME=DataLoom

# Application URL (for production deployment)
VITE_APP_URL=http://localhost:5173

# Enable debug mode
VITE_DEBUG_MODE=false

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Google Analytics ID
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable contract deployment from UI
VITE_ENABLE_CONTRACT_DEPLOYMENT=false
